//program to implement basic image enhancement operations such as histogram equalization and morphological operations
import cv2
import numpy as np
import matplotlib.pyplot as plt

color_image = cv2.imread('diana_image.jpg')
gray_image = cv2.imread('diana_image.jpg', cv2.IMREAD_GRAYSCALE)

if color_image is None or gray_image is None:
    raise ValueError("Image not found. Please check the filename or path.")

equalized = cv2.equalizeHist(gray_image)
_, binary = cv2.threshold(gray_image, 0, 255, cv2.THRESH_BINARY + cv2.THRESH_OTSU)

kernel = np.ones((5, 5), np.uint8)
dilated = cv2.dilate(gray_image, kernel, iterations=1)
eroded = cv2.erode(gray_image, kernel, iterations=1)

titles = ['Original (Color)', 'Grayscale', 'Histogram Equalized', 'Binarized',
          'Dilated', 'Eroded']
images = [cv2.cvtColor(color_image, cv2.COLOR_BGR2RGB), gray_image, equalized,
          binary, dilated, eroded]

plt.figure(figsize=(18, 8))
for i in range(len(images)):
    plt.subplot(2, 3, i + 1)
    if i == 0:
        plt.imshow(images[i])
    else:
        plt.imshow(images[i], cmap='gray')
    plt.title(titles[i])
    plt.axis('off')
plt.tight_layout()
plt.show()
